{
    "$schema":  "http://json-schema.org/schema#",
    "$comment": "a section that describes general project organization",

    "properties": {
        "data_publication": { "$ref": "../net/publication.json" },
        "people":  {
            "type": "object",
            "^[A-Za-z_][A-Za-z0-9_]*$": { "$ref": "../net/contributor.json" }
        },
        "affiliations": {
            "type": "object",
            "^[A-Za-z_][A-Za-z0-9_]*$": { "$ref": "../net/institution.json" }
        },
        "fundings": {
            "type": "object",
            "^[A-Za-z_][A-Za-z0-9_]*$": { "$ref": "../misc/funding.json" }
        },
        "data_published_by": {
            "type": "array",
            "items": { "$ref": "../net/contributor.json" },
            "minItems": 1
        },
        "description": {
            "$comment": "the description of this section.",
            "type": "string"
        }
    },

    "required": [
        "dataset",
        "people",
        "affiliations",
        "fundings",
        "data_published_by"
    ]
}
