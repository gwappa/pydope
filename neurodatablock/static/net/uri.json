{
    "$schema":  "http://json-schema.org/schema#",

    "definitions": {
        "default": {
            "type": "string",
            "pattern": "^https?://",
            "resolver": ""
        },
        "doi": {
            "type": "string",
            "pattern": "^[Dd][Oo][Ii]:",
            "resolver": "https://dx.doi.org/"
        },
        "rrid": {
            "type": "string",
            "pattern": "^RRID:",
            "resolver": "https://scicrunch.org/resolver/"
        },
        "orcid": {
            "type": "string",
            "pattern": "^ORCID:",
            "resolver": "https://orcid.org/"
        }
    },

    "oneOf": [
        { "$ref": "#definitions/default" },
        { "$ref": "#definitions/doi" },
        { "$ref": "#definitions/rrid" },
        { "$ref": "#definitions/orcid" }
    ]
}
